#:import Card components.cards.card.Card

<StartPage>:
    FitImage:
        source:"img/background.jpg"
    MDBoxLayout:
        orientation: 'horizontal'
        size_hint_x: .8
        pos_hint: {"center_x": .5, "center_y": .5}
        spacing: '20dp'
        Card:
            source: "img/adults.png"
            text: '12 +'
            on_release: app.set_adults()

        Card:
            source: "img/children.jpg"
            text: 'До 12'
            on_release: app.set_children()

        Card:
            source: "img/family.jpg"
            text: 'Смешанная\nкоманда'
            on_release: app.set_families()
