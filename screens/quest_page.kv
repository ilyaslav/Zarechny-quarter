#:import QuestCard components.cards.quest_card.QuestCard

<QuestPage>
    timer: timer
    questCard1: questCard1
    questCard2: questCard2
    questCard3: questCard3
    questCard4: questCard4
    help: help
    FitImage:
        source:"img/quest_background.jpg"

    MDBoxLayout:
        orientation: "vertical"
        spacing: root.height/20
        padding: [0, root.height/20, 0, root.height/10]

        MDBoxLayout:
            size_hint_y: .1
            size_hint_x: .8
            pos_hint: {"center_x": .5, "center_y": .5}

            MDRaisedButton:
                id: help
                text: "Подсказка"
                on_release: app.get_help()
                size_hint_y: 1
                size_hint_x: .2

            MDCard:
                size_hint_x: .6
                MDLabel:
                    id: timer
                    text: "00 : 00: 00"
                    halign: "center"
                    font_size: (root.height+root.width)/30
                    pos_hint: {"center_x": .5, "center_y": .55}

            MDFillRoundFlatIconButton:
                size_hint_x: .2
                text: "Выйти"
                icon: "logout"
                on_release: app.exit()
                size_hint_y: 1

        MDGridLayout:
            cols: 2
            rows: 2
            spacing: root.height/20
            size_hint_y: .9
            size_hint_x: .8
            pos_hint: {"center_x": .5, "center_y": .5}

            QuestCard:
                id: questCard1
                text: "Задание"
                function: app.show_send_form
            QuestCard:
                id: questCard2
                text: "Задание"
                function: app.show_send_form
            QuestCard:
                id: questCard3
                text: "Задание"
                function: app.show_send_form
            QuestCard:
                id: questCard4
                text: "Задание"
                function: app.show_send_form
