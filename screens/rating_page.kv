#:import RatingCard components.cards.rating_card.RatingCard

<RatingPage>
    scrollView: scrollView
    selected_team: selected_team

    FitImage:
        source:"img/quest_background.jpg"

    MDBoxLayout:
        orientation: "vertical"
        padding: [0, root.height/20, 0, root.height/10]

        MDFillRoundFlatIconButton:
            text: "Выйти"
            icon: "logout"
            adaptive_height: True
            pos_hint: {"center_x": .85, "center_y": .5}
            on_release: app.exit()

        FloatLayout:
            size_hint_y: .1
            size_hint_x: 1

            MDLabel:
                text: "Рейтинг команд"
                color: get_color_from_hex('#ffffff')
                font_size: (root.height+root.width)/24
                halign: "center"
                pos_hint: {"center_x": .5, "center_y": .5}
                padding: [0, 0, 0, root.height/18]

        MDCard:
            orientation: "vertical"
            size_hint_y: .9
            pos_hint: {"center_x": .5, "center_y": .5}
            size_hint_x: .8

            RatingCard:
                id: selected_team
                number: "1011"
                team_name: "TeamName"
                time: "1111"
                opacity: 1

            ScrollView:
                id: scrollView
                spacing: root.height/80
