<RatingCard>
    pos_hint: {"center_x": .5, "center_y": .5}
    size_hint_y: None
    height: "60dp"
    padding: [root.height/3, 0, root.height/3, 0]

    MDLabel:
        size_hint_x: .1
        font_size: root.height/3
        text: root.number
        bold: True

    MDLabel:
        size_hint_x: .7
        font_size: root.height/3
        text: root.team_name
        bold: True

    MDLabel:
        size_hint_x: .2
        font_size: root.height/3
        text: root.time
        halign: "right"
        bold: True
